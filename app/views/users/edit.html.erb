<h1>プロフィールの編集</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_for(@user) do |f| %>
      <% if @user.errors.present? %>
        <div class="alert alert-danger">
          <%= alert %>
          <ul>
            <% @user.errors.full_messages.each do |full_message| %>
              <li>
                <%= full_message %>
              </li>
            <% end %> 
          </ul>
        </div>
      <% end %>
    <% end %> 
  </div>
</div>
<div class="row">

  <%= form_for(@user) do |f| %>
    <div class="col-md-10 col-md-offset-1">
      <div class="form-group">
        <label for="profile" class="control-label">プロフィール</label>
        <%= f.text_area :profile ,class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="email" class="control-label">メールアドレス</label>
        <%= f.text_field :email ,class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="region" class="control-label">地域</label>
        <%= f.text_field :region ,class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  <% end %>
</div>